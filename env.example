# Node Environment
NODE_ENV=development

# Server Configuration
PORT=8080
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/arcube-dragonpass
MONGODB_DB_NAME=arcube-dragonpass

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-that-is-at-least-32-characters-long
JWT_EXPIRES_IN=24h
API_KEY_SECRET=your-super-secret-api-key-that-is-at-least-32-characters-long

# Mock DragonPass Service Configuration
MOCK_DRAGONPASS_SERVICE_URL=http://localhost:3001
MOCK_DRAGONPASS_API_TIMEOUT=10000
MOCK_SERVICE_API_KEY=your-mock-service-api-key

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@arcube.com
SENDGRID_FROM_NAME=Arcube DragonPass

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000 